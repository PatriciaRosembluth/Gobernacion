<%= render :partial => 'static_pages/notice_panel' %>

<h1>Categorias de Listas de Verificacion</h1>
<br/>


<% if @list_categories.empty?%>
<div class="row center actions">
  <div class="panel panel-danger">
    <div class="panel-heading">
      No existen categorias de listas registradas en este momento
    </div>
  </div>
</div>
<% else %>
<div class="col-md-4 col-md-offset-4">
  <div class="digg_pagination">
    <%= will_paginate @list_categories,  :previous_label => 'Atras', :next_label => 'Siguiente', :container => true ,renderer: BootstrapPagination::Rails%>
  </div>
</div><br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody class="cream-pixels">
    <% @list_categories.each do |list_category| %>
    <tr>
      <td><%= list_category.name %></td>
      <td><%= link_to 'Editar', edit_list_category_path(list_category) , class:'btn btn-primary'%></td>
      <%if current_user.role==1%>
      <td><%= link_to 'Eliminar', list_category, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger' %></td>
      <%end%>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="col-md-4 col-md-offset-4">
  <div class="digg_pagination">
    <%= will_paginate @list_categories,  :previous_label => 'Atras', :next_label => 'Siguiente', :container => true ,renderer: BootstrapPagination::Rails%>
  </div>
</div><br>
<% end %>
<br>
