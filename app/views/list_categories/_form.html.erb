<%= form_for(@list_category) do |f| %>
    <br/>
    <% if @list_category.errors.any? %>
        <div class="col-md-3"></div>
        <div class="col-md-6">

          <div class="panel panel-danger">
            <div class="panel-heading">Errores al registrar Categoria de Lista</div>
            <ul class="list-group">
              <% @list_category.errors.full_messages.each do |message| %>
                  <li class='list-group-item'><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="col-md-3"></div>
    <% end %>

    <br/>
    <div class="row">
          <div class="col-md-5">
            <%= f.label :Nombre %> <i class="fa fa-asterisk"></i><br>
            <%= f.text_field :name ,  class:'form-control'%>
          </div>
          <div class="col-md-7">
            <br/>
            <%= f.submit 'Registrar', class:'btn btn-default'%>
          </div>
    </div>
    <br/>
<% end %>

<br/>
