<%= render :partial => 'static_pages/notice_panel' %>

<div class="jumbotron">
  <div class="text-center">
    <h3>Proyecto: <%=@verified_list.received_document.procedure.project.name%></h3>
    <h4>Compania: <%=@verified_list.received_document.procedure.project.company.name%></h4>
  </div>
  <br/>
  <h4>Documento: <%= @verified_list.received_document.document.typename %></h4>
  <h4>Lista: <%=@verified_list.verification_list.name%></h4>
  <h4>Fecha de verificacion: <%= @verified_list.date_of_verification.strftime('%d/%m/%Y') %></h4>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Descripcion de campo</th>
      <th>SI</th>
      <th>NO</th>
      <th>Observacion</th>
    </tr>
    </thead>

    <tbody class="cream-pixels">
    <% @verified_list.verified_fields.each do |verified_field| %>
        <tr>
            <td><%=verified_field.verification_field.description%></td>
            <%if verified_field.answer %>
                <td><i class="fa fa-check "></i> </td><td>-</td>
            <%else%>
                <td>-</td><td><i class="fa fa-check "></i></td>
             <%end%>
            <td><%=verified_field.description%></td>
        </tr>
    <%end%>
    </tbody>
  </table>

  <br/>
  <br/>
  <%= link_to 'Volver', @verified_list.received_document.procedure ,class:'btn btn-default'%>
  <br>

</div>
</p>
