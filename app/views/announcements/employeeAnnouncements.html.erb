<%= render :partial => 'static_pages/notice_panel' %>

<h1>Lista de  Anuncios</h1>
<br/>
<% if @announcements.present?%>

    <table class="table table-stripped">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>contenido</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="cream-pixels">

        <% @announcements.each do |announcement| %>
            <tr>
              <td><%=  announcement.title%></td>
              <td><%= announcement.content%></td>
            </tr>
        <% end %>
      </tbody>
    </table>
<br>
<%else%>
    <div class="row center actions panel panel-danger">
      <div class="panel-heading">
      <% if params[:search] %>
        <p>Su busqueda no gener√≥ resultados</p>
      <%else%>
        <p>No existen anuncios registrados este momento</p>
      <%end%>
      </div>
    </div>
<%end%>
<br>
