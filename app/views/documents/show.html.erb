<%= render :partial => 'static_pages/notice_panel' %>

<h1>Ver Documento</h1>
<br>

<div class='jumbotron col-md-12'>
    <h2> <%= @document.typename %> </h2>
    <hr>
    <br/>
    <h3>Listas de Verificacion necesarias para revisar ese documento:</h3>
    <div class="col-md-1"></div>
    <% if @document.verification_lists.empty? %>
        <div class="row center actions panel panel-danger">
          <div class="panel-heading">
            <p>No se encuentran listas de verificacion asociadas a este documento</p>
          </div>
        </div>
    <%else%>
        <div class="col-md-10">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th><strong>Nombre de la lista</strong></th>
            </tr>
            </thead>
            <tbody class="cream-pixels">
            <% @document.revisions.each do |list| %>
                <tr>
                  <td><%= list.verification_list.name %></td>
                  <td><%= link_to :Ver, list.verification_list, {class: 'btn btn-default'}%> </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
    <% end %>
  <div class="col-md-1"></div>
</div>

<div class="row">
  <%= link_to 'Editar', edit_document_path(@document), class:'btn btn-primary' %>
  <%= link_to 'Volver', documents_path, class:'btn btn-default' %>
</div>
