<%= form_for(@report) do |f| %>
    <div class="center">
      <% if @report.errors.any? %>
          <div class="col-md-3"></div>
          <div class="col-md-6">

            <div class="panel panel-danger">
              <div class="panel-heading">Errores al registrar anuncio</div>
              <ul class="list-group">
                <% @report.errors.full_messages.each do |message| %>
                    <li class='list-group-item'><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
      <% end %>
      <br>

      <div class="row-fluid">
        <% if params[:procedure_id] %>
            <%= f.hidden_field :procedure_id, value:params[:procedure_id] %>
        <% end %>


          <label>Motivo<i class="fa fa-asterisk"></i> </label>
          <%= f.text_field :title, :class => 'form-control input-small'%>
          <br>
          <label>Antecedentes<i class="fa fa-asterisk"></i> </label><br>
          <%= f.text_area :antecedent ,:class => 'form-control input-lg'%>
          <br>
          <label>Marco Normativo<i class="fa fa-asterisk"></i> </label><br>
          <%= f.text_area :regulatory_framework ,:class => 'form-control input-lg'%>     
         <br>
          <label>Descripci√≥n  <i class="fa fa-asterisk"></i> </label><br>
          <%= f.text_area :description ,:class => 'form-control input-lg'%>
          <br>

          <label>Conclusiones <i class="fa fa-asterisk"></i> </label><br>
          <%= f.text_area :conclusion ,:class => 'form-control input-lg'%>
         <br>


          <label>Recomendaciones <i class="fa fa-asterisk"></i> </label><br>
          <%= f.text_area :recommendation ,:class => 'form-control input-lg'%>

        <br>  <br><br>



        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-info">
            <div class="panel-heading"><span class="glyphicon glyphicon-asterisk"></span> Indica campo obligatorio</div>
          </div>
        </div>
        <div class="col-md-4 col-md-offset-4">
          <div class="row center actions">
            <div class="actions">
              <%= f.submit 'Registrar' , class: 'btn btn-default '%>
            </div>
          </div>
        </div>    <br>  <br><br>
      </div>
    </div>
<% end %>
